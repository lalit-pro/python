{
  "manifest_version": 3,
  "name": "YourAI Copilot",
  "version": "1.0.0",
  "description": "An AI-powered assistant to help you summarize, understand, and interact with web content.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    }
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-scripts/pageExtractor.js"],
      "css": ["css/contentStyle.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["js/content-scripts/youtubeExtractor.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "contextMenus",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.openai.com/",
    "https://*.anthropic.com/",
    "https://*.googleapis.com/",
    "*://*.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "html/sidebar.html",
        "css/sidebar.css",
        "js/sidebar/sidebar.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open YourAI Copilot"
    },
    "summarize_page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Summarize current page"
    }
  }
}
